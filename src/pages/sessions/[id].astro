---
import Layout from '../../layouts/Layout.astro';
import { sessions } from '../../data/sessions';
import { formatDate } from '../../utils/dateFormatter';
import { marked } from 'marked';

export function getStaticPaths() {
  return sessions.map(session => ({
    params: { id: session.sessionNumber.toString() },
    props: { session },
  }));
}

const { session } = Astro.props;
const htmlContent = marked(session.content);
---

<Layout title={session.title}>
  <main class="container">
    <a href="/" class="back-link">‚Üê Back to Sessions</a>
    
    <article class="session-content">
      <header>
        <div class="session-number">Session {session.sessionNumber}</div>
        <h1>{session.title}</h1>
        <time datetime={session.date}>{formatDate(session.date)}</time>
      </header>

      <div class="content" set:html={htmlContent} />
    </article>
  </main>
</Layout>

<style>
.container {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem;
}

.back-link {
  display: inline-block;
  color: var(--accent-color);
  text-decoration: none;
  margin-bottom: 2rem;
  transition: transform 0.3s ease;
}

.back-link:hover {
  transform: translateX(-5px);
}

.session-content {
  background: rgba(0, 0, 0, 0.7);
  border: var(--card-border);
  border-radius: 1rem;
  padding: 2rem;
  animation: fadeIn 0.5s ease-out;
}

header {
  text-align: center;
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--accent-color);
}

.session-number {
  color: var(--accent-color);
  font-size: 1.2rem;
  margin-bottom: 0.5rem;
}

h1 {
  color: var(--accent-color);
  font-size: 2.5rem;
  margin: 0.5rem 0;
}

time {
  color: var(--secondary-color);
  font-style: italic;
}

.content {
  line-height: 1.8;
}

.content h2 {
  color: var(--accent-color);
  margin-top: 2rem;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>